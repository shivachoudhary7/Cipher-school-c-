#include <iostream>
#include <string>
using namespace std;

int main() {
    string a;
    string b;
    
    cout << "Enter first string: ";
    cin >> a;
    
    cout << "Enter second string: ";
    cin >> b;
    
    cout << "The strings which you have given as input are: " << a << " " << b << endl;
    
    string c;
    c = a + b; // This is called string concatenation
    
    cout << "The combined word is: " << c << endl;
    
    return 0;
}
