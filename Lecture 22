#include <iostream>
using namespace std;

int main() {
    int a;
    int b;
    int c;  
    int *p;
    int *q;

    p = &a;
    q = &b;

    a = 2;
    b = 5;

    c = *p + *q; 
    cout << "The value of a is (from the actual variable) " << a << endl;
    cout << "The value of b is (from the actual variable) " << b << endl;
    cout << "The value of a from the pointer using *(asterisk/indirection operator) " << *p << endl;
    cout << "The value of b from the pointer using *(asterisk/indirection operator) " << *q << endl;
    cout << "The value of c (sum of *p and *q) is " << c << endl;

    return 0;
}
