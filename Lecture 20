#include <iostream>
using namespace std;

int main() {
    long long int a;
    int b;
    cout << "The size of int is: " << sizeof(b) << " bytes" << endl;
    cout << "The size of long long int is: " << sizeof(a) << " bytes" << endl;
    cout << "The address of a is: " << &a << " The address of b is: " << &b << endl;
    return 0;
}
